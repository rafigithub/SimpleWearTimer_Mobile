<?xml version="1.0" encoding="utf-8"?>


<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#303F9F"
    android:padding="25dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.proyectoipsum.simpleweartimer.MainActivity"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#303F9F">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="com.example.rafi.watchtimerv2.MainActivity"
            android:id="@+id/tutorial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#303F9F"
            android:visibility="visible">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tutorial"
                android:textSize="12sp"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:layout_weight=".15"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leftSwipeSm"
                android:textAlignment="center"
                android:id="@+id/textSwipeLeft"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_weight=".45"
                android:gravity="center_vertical" />

            <!--<LinearLayout
                android:id="@+id/containerSwipeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/welcome"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true">



                &lt;!&ndash;<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/swipeLeft"
                    android:src="@drawable/ic_swipe_left_48dp"/>&ndash;&gt;
            </LinearLayout>-->


            <!--<LinearLayout
                android:id="@+id/containerSwiperRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                &lt;!&ndash;<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/swipeRight"
                    android:src="@drawable/ic_trending_flat_white_48dp"/>&ndash;&gt;

            </LinearLayout>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rightSwipeSm"
                android:textAlignment="center"
                android:id="@+id/textSwipeRight"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_weight=".45"
                android:gravity="center_vertical" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/mainscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textClock">

            <LinearLayout
                android:id="@+id/contenedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.wearable.view.BoxInsetLayout>


